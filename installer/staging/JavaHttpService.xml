<service>
  <!-- Unique identifier for the service (no spaces) -->
  <id>JavaHttpService</id>

  <!-- Display name shown in services.msc -->
  <name>Java HTTP Service</name>

  <!-- Description shown in service properties -->
  <description>A Java HTTP server running as a Windows service on port 8080</description>

  <!-- Full path to java.exe (SYSTEM account doesn't have user PATH) -->
  <executable>C:\Users\Chirag\.jdks\ms-21.0.10\bin\java.exe</executable>

  <!-- Arguments passed to the executable -->
  <arguments>-jar "%BASE%\JavaHttpService.jar"</arguments>

  <!-- Logging configuration: rotate log files automatically -->
  <logmode>rotate</logmode>

  <!-- Start automatically with Windows -->
  <startmode>Automatic</startmode>

  <!-- On crash / non-zero exit, restart after 10 seconds -->
  <onfailure action="restart" delay="10 sec"/>
  <onfailure action="restart" delay="20 sec"/>
  <onfailure action="none"/>

  <!-- Reset failure count after 1 hour of successful running -->
  <resetfailure>1 hour</resetfailure>
</service>
